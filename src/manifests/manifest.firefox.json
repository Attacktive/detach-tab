{
	"manifest_version": 2,
	"name": "Detach Tab",
	"version": "3.0.0",
	"description": "Detach and Reattach tab with customizable keyboard shortcuts.",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"developer": {
		"name": "Claymont",
		"url": "https://github.com/Claymont/detach-tab"
	},
	"permissions": [
		"tabs"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"commands": {
		"detach-tab": {
			"suggested_key": {
				"default": "Ctrl+Shift+Space"
			},
			"description": "Detaches active tab"
		},
		"reattach-tab": {
			"suggested_key": {
				"default": "Ctrl+Shift+V"
			},
			"description": "Reattaches last detached tab"
		}
	},
	"applications": {
		"gecko": {
			"id": "claymont@mail.com_detach-tab",
			"strict_min_version": "60.0"
		}
	}
} 